/**app.wxss**/
@import 'weui.wxss';

page {
  background-color: #f0f3f5;
  font-size: 16px;
  font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
}

.page__hd {
  padding: 80rpx;
}

.page__bd {
  padding-bottom: 80rpx;
}

.page__bd_spacing {
  padding-left: 15rpx;
  padding-right: 15rpx;
}

.page__ft {
  padding-bottom: 10px;
  text-align: center;
}

.page__title {
  text-align: left;
  font-size: 20px;
  font-weight: 400;
}

.page__desc {
  margin-top: 5px;
  color: #888;
  text-align: left;
  font-size: 14px;
}
